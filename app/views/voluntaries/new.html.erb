<div class="row">
<div class="col-lg-6 col-lg-offset-3">

<h4>Un petit formulaire à remplir pour se rendre utile et agir au coeur de la ville<h4>

<br>
<br>

<%= form_for @voluntary, html: {class: "form-horizontal", role: "form"} do |f| %>

<div class="form-group">
<%= label_tag :last_name, "Nom", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_field :last_name, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
<%= label_tag :first_name, "Prénom", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_field :first_name, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= label_tag :email, "Email", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.email_field :email, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= label_tag :description, "Présentation", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_area :description, class: "form-control", required: "required", row: 4 %>	
	</div>
</div>

<div class="form-group">
	<%= label_tag :description, "Expérience associative", class: "col-lg-2 control-label" %>
	<div class="col-lg-10">
		<%= f.text_area :description, class: "form-control", required: "required", row: 6 %>	
	</div>
</div>

 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :get_missions %>Recevoir de nouvelles missions
        </label>
      </div>
    </div>
  </div>

<div class="form-group text-center">
	<%= f.submit %>

</div>
<% end %>
</div>
</div>